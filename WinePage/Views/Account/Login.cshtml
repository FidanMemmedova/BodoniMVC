@model UserLoginViewModel
@{
    ViewData["Title"] = "Login";
}
<div class="signin__menu">
    <div class="container">
        <h1 class="signin__menu__title">Log in to your account</h1>
        <div class="signin__wrapper">
            <div class="signin__wrapper__item">
                <div class="row">
                    <div class="col-2">
                        <p class="signin__p">UserName</p>
                        <p class="signin__p2">Password</p>
                    </div>
                    <div class="col-8 offset-2">
                        <form method="post" asp-action="login">
                            <input asp-for="UserName" class="account-input mb-4 form-control">
                            <span class="text-danger" asp-validation-for="UserName"></span>
                            <input asp-for="Password" class="account-input mb-4 form-control">
                            <span class="text-danger" asp-validation-for="Password"></span>
                            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                            <br />
                            <button type="submit" class="signin__button">LOG IN</button>
                        </form>
                    </div>
                </div>
            </div>
            <!--  -->

            <hr />
            <div class="signin__end">
                <a asp-controller="Account" asp-action="Register"> No Account? Create one here</a>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    @Html.Partial("_ValidationScriptsPartial")
}