@model Blog
@{
    ViewData["Title"] = "Edit";
}

<div class="container-fluid">

    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Edit Blog</h1>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-8">
            <form asp-action="edit" method="post">
                <div class="form-group">
                    <label for="exampleInputEmail1">Title</label>
                    <input asp-for="Title" type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter Title">
                    <span class="text-danger" asp-validation-for="Title"></span>
                </div> 
                <div class="form-group">
                    <label for="exampleInputEmail1">Description</label>
                    <input asp-for="Desc" type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter Description">
                    <span class="text-danger" asp-validation-for="Desc"></span>
                </div>
                <div class="form-group">
                    <label>Image File</label>
                    <input asp-for="ImageFile" accept="image/*" class="form-control" placeholder="Enter ImageFile">
                    <span class="text-danger" asp-validation-for="ImageFile"></span>
                </div>
                <img width="200" src="~/uploads/blogImages/@Model.Image" />
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>


</div>

@section Scripts{
    @Html.Partial("_ValidationScriptsPartial")
}