@model Wine
@{
    ViewData["Title"] = "Create";
}

<div class="container-fluid">

    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Wine Create</h1>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-8">
            <form asp-controller="Wine" asp-action="create" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="Name">Name</label>
                    <input asp-for="Name" class="form-control">
                    <span class="text-danger" asp-validation-for="Name"></span>
                </div>    
                <div class="form-group">
                    <label asp-for="Description">Description</label>
                    <input asp-for="Description" class="form-control">
                    <span class="text-danger" asp-validation-for="Description"></span>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="Brand">Brand</label>
                            <select class="form-control" asp-for="BrandId" asp-items="new SelectList(ViewBag.Brands,nameof(Brand.Id),nameof(Brand.Name))">
                            </select>
                            <span class="text-danger" asp-validation-for="BrandId"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="CategoryId">Category</label>
                            <select class="form-control" asp-for="CategoryId" asp-items="new SelectList(ViewBag.Categories,nameof(Category.Id),nameof(Category.Name))">
                            </select>
                            <span class="text-danger" asp-validation-for="CategoryId"></span>

                        </div>
                    </div>   
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="PropertyId">Property</label>
                            <select class="form-control" asp-for="PropertyId" asp-items="new SelectList(ViewBag.Properties,nameof(Property.Id),nameof(Property.Name))">
                            </select>
                            <span class="text-danger" asp-validation-for="PropertyId"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="ColorIds">ColorIds</label>
                            <select class="form-control" asp-for="ColorIds" asp-items="new SelectList(ViewBag.Colors,nameof(Color.Id),nameof(Color.Name))">
                            </select>
                            <span class="text-danger" asp-validation-for="ColorIds"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="SalePrice">SalePrice</label>
                            <input asp-for="SalePrice" class="form-control">
                            <span class="text-danger" asp-validation-for="SalePrice"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="CostPrice">CostPrice</label>
                            <input asp-for="CostPrice" class="form-control">
                            <span class="text-danger" asp-validation-for="CostPrice"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="DiscountPercent">DiscountPercent</label>
                            <input asp-for="DiscountPercent" class="form-control">
                            <span class="text-danger" asp-validation-for="DiscountPercent"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label>Image File</label>
                    <input asp-for="ImageFile" accept="image/*" class="form-control" placeholder="Enter ImageFile">
                    <span class="text-danger" asp-validation-for="ImageFile"></span>
                </div>


                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>

</div>


@section Scripts{
    @Html.Partial("_ValidationScriptsPartial")
}

